        <CheckBox Grid.Column="1" Content="Auxiliar" HorizontalAlignment="Left" Height="31" Margin="162,355,0,0" VerticalAlignment="Top" Width="79"/>
        <CheckBox Grid.Column="1" Content="Cargador" HorizontalAlignment="Left" Height="31" Margin="162,319,0,0" VerticalAlignment="Top" Width="79" RenderTransformOrigin="0.534,1.227"/>
