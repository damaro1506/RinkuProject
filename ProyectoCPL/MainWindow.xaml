        <Label x:Name="NUEVO" Content="NUEVO"  HorizontalAlignment="Left" Height="26" Margin="40,4,0,0" VerticalAlignment="Top" Width="72" AutomationProperties.Name="NEW" FontWeight="Bold" Background="#FFBBB4B4"/>
